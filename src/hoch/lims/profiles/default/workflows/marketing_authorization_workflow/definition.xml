<dc-workflow workflow_id="marketing_authorization_workflow" state_variable="review_state" initial_state="active">
  <description>Marketing Authorization Workflow</description>
  <states>
    <state state_id="active"/>
    <state state_id="expired"/>
    <state state_id="inactive"/>
    <state state_id="pending"/>
  </states>
  <transitions>
    <transition transition_id="expire" source="active" destination="expired"/>
    <transition transition_id="deactivate" source="active" destination="inactive"/>
    <transition transition_id="reactivate" source="inactive" destination="pending"/>
    <transition transition_id="approve" source="pending" destination="active"/>
    <transition transition_id="reject" source="pending" destination="inactive"/>
    <transition transition_id="renew" source="expired" destination="pending"/>
  </transitions>
</dc-workflow>