<?xml version="1.0"?>
<rolemap>
  <!-- Roles deben tener 'name' y 'title' -->
  <roles>
    <role name="RegulatoryPharmacist"/>
  </roles>
  
  <permissions>
    <!-- Cada permiso debe tener 'name' y 'acquire' -->
    <permission name="hoch.lims: Add MarketingAuthorization" acquire="False">
      <role name="Manager"/>
      <role name="RegulatoryPharmacist"/>
    </permission>
    
    <permission name="hoch.lims: Edit MarketingAuthorization" acquire="False">
      <role name="Manager"/>
      <role name="RegulatoryPharmacist"/>
    </permission>
    
    <permission name="hoch.lims: View MarketingAuthorization" acquire="True">
      <role name="Authenticated"/>
    </permission>
    
    <permission name="hoch.lims: Transition MarketingAuthorization" acquire="False">
      <role name="Manager"/>
      <role name="RegulatoryPharmacist"/>
    </permission>
  </permissions>
</rolemap>